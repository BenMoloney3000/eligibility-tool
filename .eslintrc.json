{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2019,
    },
    "extends": ["eslint:recommended", "plugin:compat/recommended", "prettier"],
    "globals": {
        "Sentry": "readonly",
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single", "avoid-escape"],
        "semi": ["error", "never"],
        "no-console": "off",
        "camelcase": ["error", {"properties": "never", "ignoreDestructuring": true}]
    }
}
